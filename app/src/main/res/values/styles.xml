<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="accountInput">
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:ems">10</item>
    </style>

    <style name="normalInput">
        <item name="android:background">@drawable/normal_input</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#5e5e5e</item>
        <item name="android:ems">10</item>

    </style>
</resources>



